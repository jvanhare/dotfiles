if [[ ! -d "$SRCDIR/spack" ]]; then
    git clone -c feature.manyFiles=true https://github.com/spack/spack.git $SRCDIR/spack
fi
smart_source $SRCDIR/spack/share/spack/setup-env.sh
spack compiler find /usr/local/opt/*
spack compiler find /opt/homebrew/opt/*
spack external find --not-buildable --all

{{ if eq .chezmoi.os "darwin" }}
zsh -c 'spack external find --not-buildable --all /usr/local/opt/gcc*(P:-p:)'
zsh -c 'spack external find --not-buildable --all /usr/local/opt/llvm*(P:-p:)'
{{ end }}
