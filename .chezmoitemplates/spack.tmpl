if [[ ! -d "$SRC/spack" ]]; then
    git clone -c feature.manyFiles=true https://github.com/spack/spack.git $SRC/spack
fi
spack compiler find /usr/local/opt/*
spack external find --not-buildable --all

{{ if eq .chezmoi.os "darwin" }}
zsh -c 'spack external find --not-buildable --all /usr/local/opt/gcc*(P:-p:)'
zsh -c 'spack external find --not-buildable --all /usr/local/opt/llvm*(P:-p:)'
zsh -c 'spack external find --not-buildable --all /usr/local/opt/libiconv'
spack compiler add /opt/intel/oneapi/compiler/latest/mac/bin/intel64
{{ end }}
