# Setup brew on darwin. ########################################################
/bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

# Setup brew packages on darwin. ###############################################
brew install zsh git wget curl vim gcc rust node yarn lmod
brew install vlc skim texlive imagemagick ffmpeg pandoc pandoc-crossref
brew install git-flow-avh font-fira-code
brew install --cask google-chrome
brew install --cask alacritty
brew install --cask vscodium

# Setup VSCodium configuration. ################################################
ln -s $HOME/.code/settings.json $HOME/Library/Application\ Support/VSCodium/User/settings.json

# Setup VSCodium extensions. ###################################################
alias codium="/Applications/VSCodium.app/Contents/Resources/app/bin/codium"
codium --install-extension ms-ceintl.vscode-language-pack-fr
codium --install-extension dracula-theme.theme-dracula

# Setup ViZiR4 on darwin. ######################################################
cd $HOME/Downloads
wget --no-check-certificate  https://pyamg.saclay.inria.fr/download/vizir/exes/Mac/vizir4.2022.03.01.dmg
hdiutil mount vizir4.2022.03.01.dmg
sudo cp -r /Volumes/vizir4/vizir4.app /Applications
hdiutil unmount "/Volumes/vizir4"
rm vizir4.2022.03.01.dmg

